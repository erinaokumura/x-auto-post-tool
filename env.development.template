# 開発環境用設定テンプレート
# このファイルを .env.development にコピーして使用してください

ENVIRONMENT=development

# OpenAI API
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Twitter/X API
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_REDIRECT_URI=http://127.0.0.1:8000/callback
OAUTHLIB_INSECURE_TRANSPORT=1

# GitHub（オプション）
GITHUB_TOKEN=your-github-token-optional

# データベース（Railway Development環境）
# Railway Development環境のPostgreSQLのDATABASE_URLを設定
DATABASE_URL=postgresql://postgres:password@host:port/database

# Redis（Railway Development環境）
# Railway Development環境のRedisのREDIS_URLを設定
REDIS_URL=redis://default:password@redis-dev.railway.internal:6379

# CORS設定（開発環境）
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000

# 暗号化キー（32文字以上のランダム文字列）
ENCRYPTION_KEY=your-32-character-encryption-key-here

# 最適化設定
ENABLE_CACHING=true
CACHE_GITHUB_TTL=300
CACHE_OPENAI_TTL=86400
ENABLE_CIRCUIT_BREAKER=true
GITHUB_CIRCUIT_FAILURE_THRESHOLD=3
OPENAI_CIRCUIT_FAILURE_THRESHOLD=5
TWITTER_CIRCUIT_FAILURE_THRESHOLD=3

# パフォーマンス設定
ASYNC_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10
ENABLE_PERFORMANCE_LOGGING=true
