# 本番環境用設定テンプレート
# このファイルを .env.production にコピーして使用してください
# Railway本番環境では環境変数として直接設定することを推奨

ENVIRONMENT=production

# OpenAI API
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Twitter/X API
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_REDIRECT_URI=https://your-railway-domain.railway.app/callback
OAUTHLIB_INSECURE_TRANSPORT=0

# GitHub（オプション）
GITHUB_TOKEN=your-github-token-optional

# データベース（Railway Production環境）
# Railway Production環境のPostgreSQLのDATABASE_URLを設定
DATABASE_URL=postgresql://postgres:password@host:port/database

# Redis（Railway Production環境）
# Railway Production環境のRedisのREDIS_URLを設定
REDIS_URL=redis://default:password@redis-prod.railway.internal:6379

# CORS設定（本番環境）
CORS_ORIGINS=https://your-frontend-domain.vercel.app

# 暗号化キー（32文字以上のランダム文字列）
ENCRYPTION_KEY=your-secure-32-character-encryption-key

# 最適化設定
ENABLE_CACHING=true
CACHE_GITHUB_TTL=300
CACHE_OPENAI_TTL=86400
ENABLE_CIRCUIT_BREAKER=true
GITHUB_CIRCUIT_FAILURE_THRESHOLD=3
OPENAI_CIRCUIT_FAILURE_THRESHOLD=5
TWITTER_CIRCUIT_FAILURE_THRESHOLD=3

# パフォーマンス設定
ASYNC_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10
ENABLE_PERFORMANCE_LOGGING=true
